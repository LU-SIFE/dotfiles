#!/bin/bash

OPTS='--info=inline --print-query --bind=ctrl-space:print-query,tab:replace-query'

MPV_OPTS='--msg-level=all=no,statusline=status --no-video --term-status-msg=${filename}\n\n[${playback-time}/${time-remaining}]'

# Get music file
FILE=$(ls ~/Media/music | fzf $OPTS | tail -1)

# Checks if string is empty
if [ -z "$FILE" ]
then
	exit
else
	#resizes the window once the song has been selected (i3 specific)
	i3-msg -q resize set height 100 &&  
	mpv $MPV_OPTS ~/Media/music/$FILE
fi
